<div id="options" style="position: fixed; left:0; top:0; width:100%; height:100%; background-color: rgba(0,0,0,0.2); text-align: left">
	<div id="options-box" style="background-color: white; margin: 32px 16px; padding: 8px 12px 16px; font-size: 16px; min-width: 200px; right: 16px; float:right">
		<div style="text-align:right;">
			<i id="close-options" class="link-button fa fa-times" aria-hidden="true"></i>
		</div>
		<input id="displayFurigana" type="checkbox">
		<label for="displayFurigana">Display furigana</label>
		<br>
		<input id="enableDictionary" type="checkbox">
		<label for="enableDictionary">Display dictionary</label>
	</div>
	<script type="text/javascript">
		window.langToolsConfig = window.langToolsConfig || {};

		$("#close-options").click(() => {
			$("#options").remove();
		});

		$("#options").click(() => {
			$("#options").remove();
		});

		$("#options-box").click((e) => {
			e.stopPropagation();
		});

		$("#displayFurigana").change(() => {
			window.langToolsConfig.hideFurigana = !$("#displayFurigana").is(':checked');
			$(document).trigger('options-changed');
		});

		$("#enableDictionary").change(() => {
			window.langToolsConfig.disableDictionary = !$("#enableDictionary").is(':checked');
			$(document).trigger('options-changed');
		});

		$("#displayFurigana").prop('checked', !window.langToolsConfig.hideFurigana);
		$("#enableDictionary").prop('checked', !window.langToolsConfig.disableDictionary);
	</script>
</div>